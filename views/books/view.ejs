<%- include('../partials/errorMessage') %>
<h2 class="page_header"><%= book.title %></h2> 
<div class='book-details'>
    <div class=''>
        <img class="book-cover" src="<%= book.coverImagePath %>">
        <div class='book-details-btn-grid'>
            <a class='btn btn_primary' href='/books/<%= book.id %>/edit'>Edit</a>
            <form action="/books/<%= book.id %>?_method=DELETE" method="POST">
                <button class='btn btn_danger' type="submit">Delete</button>
            </form>
            <a class="btn btn_primary book-details-author-button" href='/authors/<%= book.author.id %>'>View Author</a>
        </div>
    </div>

    <div class='book-details-grid'>
        <div class='book-details-label'>Author:</div>
        <div><%= book.author.name %></div>

        <div class='book-details-label'>Publish Date:</div>
        <div><%= book.publishDate.toDateString() %></div>

        <div class='book-details-label'>Page Count:</div>
        <div><%= book.pageCount %></div>

        <div class='book-details-label'>Description:</div>
        <div><%= book.description %></div>

    </div>
</div>

